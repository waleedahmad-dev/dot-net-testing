<Window x:Class="WordHighlighter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Word Highlighter - Grammarly Clone" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        ResizeMode="CanResize">
    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#15C39A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#12B38A"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#E0E0E0"/>
                    <Setter Property="Foreground" Value="#9E9E9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#15C39A"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#15C39A"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0FDF9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF6B6B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF5252"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Grammarly-style Header -->
        <Border Grid.Row="0" Background="White" Padding="0" BorderThickness="0,0,0,1" BorderBrush="#E5E7EB">
            <Grid Height="80">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0">
                    <Border Width="48" Height="48" Background="#15C39A" CornerRadius="12" Margin="0,0,15,0">
                        <TextBlock Text="W" FontSize="28" FontWeight="Bold" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Word Highlighter" FontSize="22" FontWeight="Bold" Foreground="#1F2937"/>
                        <TextBlock Text="Powered by AI-like intelligence" FontSize="12" Foreground="#6B7280" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Connection Status Badge -->
                <Border Grid.Column="1" VerticalAlignment="Center" Margin="0,0,30,0"
                        Background="#FEF3C7" CornerRadius="20" Padding="16,8">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse x:Name="statusIndicator" Width="10" Height="10" Fill="#F59E0B" Margin="0,0,8,0"/>
                        <TextBlock x:Name="txtConnectionStatus" Text="Not Connected" FontWeight="SemiBold" 
                                   Foreground="#92400E" FontSize="13"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="40,30,40,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Welcome Card -->
                <Border Grid.Row="0" Background="White" CornerRadius="16" Padding="30" Margin="0,0,0,24"
                        Effect="{DynamicResource CardShadow}">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="20" ShadowDepth="0"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Get Started" FontSize="24" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,8"/>
                            <TextBlock Text="Connect to Microsoft Word to begin highlighting and replacing words in your document." 
                                       FontSize="14" Foreground="#6B7280" TextWrapping="Wrap" LineHeight="22"/>
                            <Button x:Name="btnConnectWord" Content="Connect to Word" 
                                    Click="BtnConnectWord_Click" 
                                    Style="{StaticResource ModernButton}"
                                    Width="180" HorizontalAlignment="Left" Margin="0,20,0,0"/>
                        </StackPanel>

                        <!-- Illustration or Icon Area -->
                        <Border Grid.Column="1" Width="150" Height="150" Background="#F0FDF9" 
                                CornerRadius="12" Margin="20,0,0,0">
                            <Viewbox Width="80" Height="80">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="#15C39A" Data="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                    </Grid>
                </Border>

                <!-- Action Cards -->
                <Grid Grid.Row="1" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Highlight Card -->
                    <Border Grid.Column="0" Background="White" CornerRadius="16" Padding="24">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="20" ShadowDepth="0"/>
                        </Border.Effect>
                        <StackPanel>
                            <Border Width="56" Height="56" Background="#DBEAFE" CornerRadius="12" 
                                    HorizontalAlignment="Left" Margin="0,0,0,16">
                                <TextBlock Text="âœ¨" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Highlight Words" FontSize="18" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,8"/>
                            <TextBlock Text="Automatically highlight all words in your document for easy editing." 
                                       FontSize="13" Foreground="#6B7280" TextWrapping="Wrap" LineHeight="20" Margin="0,0,0,20"/>
                            <Button x:Name="btnHighlightAll" Content="Highlight All" 
                                    Click="BtnHighlightAll_Click" 
                                    Style="{StaticResource ModernButton}"
                                    IsEnabled="False" HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>

                    <!-- Clear Card -->
                    <Border Grid.Column="2" Background="White" CornerRadius="16" Padding="24">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="20" ShadowDepth="0"/>
                        </Border.Effect>
                        <StackPanel>
                            <Border Width="56" Height="56" Background="#FEE2E2" CornerRadius="12" 
                                    HorizontalAlignment="Left" Margin="0,0,0,16">
                                <TextBlock Text="ðŸ§¹" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Clear Highlights" FontSize="18" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,8"/>
                            <TextBlock Text="Remove all highlights from your document while keeping your changes." 
                                       FontSize="13" Foreground="#6B7280" TextWrapping="Wrap" LineHeight="20" Margin="0,0,0,20"/>
                            <Button x:Name="btnClearHighlights" Content="Clear All" 
                                    Click="BtnClearHighlights_Click" 
                                    Style="{StaticResource DangerButton}"
                                    IsEnabled="False" HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- How It Works Section -->
                <Border Grid.Row="2" Background="White" CornerRadius="16" Padding="30" Margin="0,0,0,24">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="20" ShadowDepth="0"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="How It Works" FontSize="20" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,20"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Step 1 -->
                            <Border Grid.Row="0" Grid.Column="0" Width="40" Height="40" Background="#15C39A" 
                                    CornerRadius="20" Margin="0,0,16,16">
                                <TextBlock Text="1" FontSize="18" FontWeight="Bold" Foreground="White" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,16">
                                <TextBlock Text="Connect to Word" FontSize="15" FontWeight="SemiBold" Foreground="#111827" Margin="0,0,0,4"/>
                                <TextBlock Text="Click the 'Connect to Word' button to establish a connection with your open Microsoft Word document." 
                                           FontSize="13" Foreground="#6B7280" TextWrapping="Wrap" LineHeight="20"/>
                            </StackPanel>

                            <!-- Step 2 -->
                            <Border Grid.Row="1" Grid.Column="0" Width="40" Height="40" Background="#15C39A" 
                                    CornerRadius="20" Margin="0,0,16,16">
                                <TextBlock Text="2" FontSize="18" FontWeight="Bold" Foreground="White" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,16">
                                <TextBlock Text="Highlight Your Words" FontSize="15" FontWeight="SemiBold" Foreground="#111827" Margin="0,0,0,4"/>
                                <TextBlock Text="Use the 'Highlight All' button to mark every word in your document with a yellow highlight for easy identification." 
                                           FontSize="13" Foreground="#6B7280" TextWrapping="Wrap" LineHeight="20"/>
                            </StackPanel>

                            <!-- Step 3 -->
                            <Border Grid.Row="2" Grid.Column="0" Width="40" Height="40" Background="#15C39A" 
                                    CornerRadius="20" Margin="0,0,16,16">
                                <TextBlock Text="3" FontSize="18" FontWeight="Bold" Foreground="White" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,16">
                                <TextBlock Text="Click to Edit" FontSize="15" FontWeight="SemiBold" Foreground="#111827" Margin="0,0,0,4"/>
                                <TextBlock Text="Simply click on any highlighted word in MS Word to open the replacement widget instantly." 
                                           FontSize="13" Foreground="#6B7280" TextWrapping="Wrap" LineHeight="20"/>
                            </StackPanel>

                            <!-- Step 4 -->
                            <Border Grid.Row="3" Grid.Column="0" Width="40" Height="40" Background="#15C39A" 
                                    CornerRadius="20" Margin="0,0,16,0">
                                <TextBlock Text="4" FontSize="18" FontWeight="Bold" Foreground="White" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Row="3" Grid.Column="1">
                                <TextBlock Text="Replace &amp; Transform" FontSize="15" FontWeight="SemiBold" Foreground="#111827" Margin="0,0,0,4"/>
                                <TextBlock Text="Enter your replacement word and apply quick transformations like uppercase, lowercase, or capitalize with a single click." 
                                           FontSize="13" Foreground="#6B7280" TextWrapping="Wrap" LineHeight="20"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Activity Feed -->
                <Border Grid.Row="3" Background="White" CornerRadius="16" Padding="30">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="20" ShadowDepth="0"/>
                    </Border.Effect>
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <TextBlock Text="Activity Feed" FontSize="20" FontWeight="Bold" Foreground="#111827" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtStatusBar" Text="Ready to start" FontSize="13" Foreground="#6B7280" 
                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                        <Border Background="#F9FAFB" CornerRadius="8" Padding="16" MaxHeight="200">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="txtLog" TextWrapping="Wrap" FontFamily="Segoe UI" 
                                           FontSize="13" Foreground="#374151" LineHeight="24"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
