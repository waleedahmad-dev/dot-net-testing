<Window x:Class="WordHighlighter.WordReplacementWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Replace Word"
        Height="340"
        Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent"
        RenderTransformOrigin="0.5,0.5">

    <Window.RenderTransform>
        <ScaleTransform ScaleX="1"
                        ScaleY="1"/>
    </Window.RenderTransform>

    <Window.Resources>
        <Style x:Key="ModernButton"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#15C39A"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="12,8"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#12B38A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#F3F4F6"/>
            <Setter Property="Foreground"
                    Value="#374151"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="12,8"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#E5E7EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="QuickActionButton"
               TargetType="Button">
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="Foreground"
                    Value="#6B7280"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="BorderBrush"
                    Value="#E5E7EB"/>
            <Setter Property="Padding"
                    Value="10,5"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#F9FAFB"/>
                    <Setter Property="BorderBrush"
                            Value="#15C39A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="White"
            CornerRadius="12"
            BorderThickness="1"
            BorderBrush="#E5E7EB">
        <Border.Effect>
            <DropShadowEffect Color="#000000"
                              Opacity="0.15"
                              BlurRadius="30"
                              ShadowDepth="0"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Close Button -->
            <Grid Grid.Row="0"
                  Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Replace Word"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#111827"/>
                    <TextBlock Text="Make your changes and transform with ease"
                               FontSize="11"
                               Foreground="#6B7280"
                               Margin="0,2,0,0"/>
                </StackPanel>
                <Button Content="âœ•"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="BtnCancel_Click"
                        Style="{StaticResource QuickActionButton}"
                        FontSize="16"
                        Padding="0"/>
            </Grid>

            <!-- Original Word -->
            <StackPanel Grid.Row="1"
                        Margin="0,0,0,10">
                <TextBlock Text="ORIGINAL"
                           FontWeight="SemiBold"
                           FontSize="12"
                           Foreground="#6B7280"
                           Margin="0,0,0,6"/>
                <Border Background="#F9FAFB"
                        Padding="14"
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="#E5E7EB">
                    <TextBlock x:Name="txtOriginalWord"
                               FontSize="15"
                               FontWeight="Medium"
                               Foreground="#111827"/>
                </Border>
            </StackPanel>

            <!-- Replacement Input -->
            <StackPanel Grid.Row="2"
                        Margin="0,0,0,10">
                <TextBlock Text="REPLACEMENT"
                           FontWeight="SemiBold"
                           FontSize="12"
                           Foreground="#6B7280"
                           Margin="0,0,0,6"/>
                <Border BorderBrush="#D1D5DB"
                        BorderThickness="2"
                        CornerRadius="8">
                    <TextBox x:Name="txtReplacement"
                             Height="36"
                             FontSize="15"
                             Padding="14,0"
                             VerticalContentAlignment="Center"
                             BorderThickness="0"
                             Background="White"
                             KeyDown="TxtReplacement_KeyDown"
                             FontWeight="Medium"/>
                </Border>
                <Border x:Name="errorBorder"
                        Background="#FEE2E2"
                        CornerRadius="6"
                        Padding="10,8"
                        Margin="0,8,0,0"
                        Visibility="Collapsed">
                    <TextBlock x:Name="txtError"
                               Text=""
                               Foreground="#DC2626"
                               FontSize="12"
                               FontWeight="Medium"/>
                </Border>
            </StackPanel>

            <!-- Quick Transformations -->
            <StackPanel Grid.Row="3"
                        Margin="0,0,0,12">
                <TextBlock Text="QUICK TRANSFORMATIONS"
                           FontWeight="SemiBold"
                           FontSize="12"
                           Foreground="#6B7280"
                           Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <Button Content="ðŸ”¤ UPPERCASE"
                            Click="BtnUppercase_Click"
                            Style="{StaticResource QuickActionButton}"
                            Margin="0,0,8,0"/>
                    <Button Content="ðŸ”¡ lowercase"
                            Click="BtnLowercase_Click"
                            Style="{StaticResource QuickActionButton}"
                            Margin="0,0,8,0"/>
                    <Button Content="ðŸ”  Capitalize"
                            Click="BtnCapitalize_Click"
                            Style="{StaticResource QuickActionButton}"/>
                </StackPanel>
            </StackPanel>

            <!-- Spacer -->
            <Border Grid.Row="4"/>

            <!-- Action Buttons -->
            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="Cancel"
                        Click="BtnCancel_Click"
                        Style="{StaticResource SecondaryButton}"
                        Height="36"/>
                <Button Grid.Column="2"
                        x:Name="btnReplace"
                        Content="Replace Word"
                        Click="BtnReplace_Click"
                        Style="{StaticResource ModernButton}"
                        Height="36"/>
            </Grid>
        </Grid>
    </Border>
</Window>
